<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
    </style>

    <style name="BasicLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BasicTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MainTemperatureTextView" parent="BasicTextView">
        <item name="android:textSize">@dimen/temperature_big_text_size</item>
    </style>

    <style name="SmallTextView" parent="BasicTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="BasicTextViewWithDrawable" parent="BasicTextView">
        <item name="android:width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BigTextViewWithDrawable" parent="BasicTextViewWithDrawable">
        <item name="android:drawablePadding">@dimen/tv_with_small_drawable_padding</item>
        <item name="android:layout_marginTop">@dimen/tv_with_drawable_vertical_margin</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DrawerTitleTextView" parent="BasicTextView">
        <item name="android:alpha">0.5</item>
        <item name="android:textSize">@dimen/drawer_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/drawer_title_left_padding</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/colorTabTextPrimary</item>
        <item name="tabTextColor">@color/colorTabTextSecondary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="WeatherAttributeSmallImageView">
        <item name="android:layout_width">@dimen/card_small_image_size</item>
        <item name="android:layout_height">@dimen/card_small_image_size</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
